          +programs-card("./assets/bitmap.png", "Electronics and Telecommunication Engineering", "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Accusamus, rem?", "#")
          +programs-card("./assets/bitmap.png", "Post Diploma in Medical Electronics", "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Accusamus, rem?", "#")
