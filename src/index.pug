extends layout.pug

//- Mixins
mixin programs-card(image, name, description, href)
  li.splide__slide.group.p-4.transition.duration-500.ease-in-out.border.border-gray-100.rounded.w-full.hover_border.hover_border-blue-600.hover_bg-blue-50
    .inline-block.overflow-hidden.w-full
      img.h-36.w-full.object-cover.transition.duration-500.ease-in-out.group-hover_scale-110(src="./assets/bitmap.png", alt="")
    h1.font-serif.font-bold.text-gray-700.text-xl.transition.duration-500.ease-in-out.group-hover_text-blue-700.my-4= name
    p.text-gray-500.mb-4= description
    a.text-blue-600.font-semibold.border-b-2.border-blue-600(href= href) Learn More

mixin resources-card(title, summary, href)
  .w-full.flex.flex-col.items-start.md_flex-row.md_items-center.md_justify-between.lg_flex-col.lg_items-start.lg_justify-start.group.p-4.rounded.transition.duration-500.ease-in-out.border.border-gray-200.hover_border-blue-100.hover_bg-blue-100
    .flex.flex-col.items-start
      h1.font-bold.text-gray-700.text-lg.mb-4= title
      p.text-gray-500.mb-4.md_mb-0.lg_mb-4= summary
    a.flex.items-center.p-2.rounded-full.border.text-blue-500.group-hover_text-white.group-hover_bg-blue-600.transition.duration-500.ease-in-out(href= href): span.material-icons-round chevron_right

mixin events-card(title, image)
  a.block.group.flex.flex-col.items-center(href="#")
    img.h-44.w-full.object-cover.mb-2(src= image, alt="")
    p.text-center.text-gray-700.group-hover_text-blue-700.font-semibold= title

block content
