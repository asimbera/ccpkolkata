    div.w-full.grid.grid-cols-1.gap-3.mt-6.md_grid-cols-2.lg_grid-cols-3
      +programs-card("./assets/bitmap.png", "Name", "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Accusamus, rem?", "#")
      +programs-card("./assets/bitmap.png", "Name", "Lorem ipsum, dolor sit amet consectetur adipisicing elit. Accusamus, rem?", "#")

  //- Essential Resources Section
  section.bg-blue-50.p-4.sm_px-10.py-8.grid.gap-6.grid-cols-1.lg_grid-cols-2
