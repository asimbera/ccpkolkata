        +resources-card("For first years", "Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus, nesciunt!", "#")
        +resources-card("Tuition & Fees", "Lorem ipsum dolor sit amet consectetur adipisicing elit. Voluptatibus, nesciunt!", "#")
